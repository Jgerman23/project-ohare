{% from "_macros.njk" import jpg %}

<section class="intro">

  <header class="header--center header--heroic header--drop-mobile">

    <figure class="lede-image">
      {{ jpg("natural_yellow") }}
      
      <figcaption class="caption">
        {# <span class="cutline">{{ ARCHIE.top.hero.cutline }}</span> #}
        <span class="cutline">iStock</span>
      </figcaption>
    </figure>
    
    <div class="lede-copy">
      <h1 class="hed heading-terminal">
        {{- ARCHIE.top.headline -}}
      </h1>
    </div>
  
  </header>


  <div class="dek">
    {{- ARCHIE.top.deck -}}
  </div>
  
  <div class="bylines">
    {{- ARCHIE.top.byline | safe -}}
  </div>

  <hr>
  
  <div class="info">
    <p>
      <span class="timestamp">
        <time datetime="{{- ARCHIE.top.timestamp -}}">{{- ARCHIE.top.date -}}</time>
      </span>
    </p>

    <p>
      {{- ARCHIE.top.partner_language | safe -}}
    </p>
  </div>
</section>